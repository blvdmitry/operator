{
  "extends": "./tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": { "*": ["*"] },
    "allowJs": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/tests", "src/tools", "dist"]
}
